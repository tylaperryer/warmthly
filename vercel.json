{
  "trailingSlash": true,
  "cleanUrls": false,
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Content-Security-Policy",
          "value": "default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-hashes' https://www.gstatic.com https://cdn.quilljs.com; style-src 'self' 'unsafe-inline' 'unsafe-hashes' https://cdn.quilljs.com; font-src 'self'; img-src 'self' data: https:; frame-src https://www.youtube-nocookie.com https://open.spotify.com; connect-src 'self' https://*.warmthly.org https://api.airtable.com https://*.firebaseio.com;"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        },
        {
          "key": "Permissions-Policy",
          "value": "geolocation=(), microphone=(), camera=()"
        }
      ]
    }
  ],
  "rewrites": [
    {
      "source": "/",
      "has": [
        {
          "type": "host",
          "value": "admin.warmthly.org"
        }
      ],
      "destination": "/admin-app/index.html"
    },
    {
      "source": "/:path*",
      "has": [
        {
          "type": "host",
          "value": "admin.warmthly.org"
        }
      ],
      "destination": "/admin-app/:path*.html"
    },
    {
      "source": "/",
      "has": [
        {
          "type": "host",
          "value": "post.warmthly.org"
        }
      ],
      "destination": "/post/index.html"
    },
    {
      "source": "/:path*",
      "has": [
        {
          "type": "host",
          "value": "post.warmthly.org"
        }
      ],
      "destination": "/post/:path*.html"
    },
    {
      "source": "/",
      "has": [
        {
          "type": "host",
          "value": "mint.warmthly.org"
        }
      ],
      "destination": "/mint/index.html"
    },
    {
      "source": "/:path*",
      "has": [
        {
          "type": "host",
          "value": "mint.warmthly.org"
        }
      ],
      "destination": "/mint/:path*.html"
    },
    {
      "source": "/admin/emails",
      "destination": "/admin/emails.html"
    },
    {
      "source": "/vote",
      "destination": "/vote.html"
    },
    {
      "source": "/research",
      "destination": "/research.html"
    },
    {
      "source": "/post",
      "destination": "/post.html"
    }
  ],
  "redirects": [
    {
      "source": "/post/:path*",
      "has": [
        {
          "type": "host",
          "value": "warmthly.org"
        }
      ],
      "destination": "/",
      "permanent": false
    },
    {
      "source": "/post",
      "has": [
        {
          "type": "host",
          "value": "warmthly.org"
        }
      ],
      "destination": "/",
      "permanent": false
    },
    {
      "source": "/admin/:path*",
      "has": [
        {
          "type": "host",
          "value": "warmthly.org"
        }
      ],
      "destination": "/",
      "permanent": false
    },
    {
      "source": "/admin",
      "has": [
        {
          "type": "host",
          "value": "warmthly.org"
        }
      ],
      "destination": "/",
      "permanent": false
    }
  ]
}
